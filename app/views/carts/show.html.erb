<p id="notice"><%= notice %></p>
<%= content_for :header_photo, "http://i.imgur.com/lgZirLX.jpg" %>

<header class="intro">
    <div class="intro-body">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h1 class="brand-heading">Your Cart</h1>
                </div>
                <% @cart.line_items.each do |item| %>
                <div class="col-md-4">
                  <div class="card card-inverse">
                    <img class="card-img" src="<%= item.photograph.image %>" width="375px" alt="Cart item">
                    <div class="card-img-overlay">
                      <h4 class"card-title"> <%= item.photograph.title %> </h4>
                    </div>
                  </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</header>
