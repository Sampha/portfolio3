                <% @cart.line_items.each do |item| %>
              <div class="cart_col">
                <div>
                  <div class="card card-inverse">
                    <img class="card-img" src="<%= item.photograph.image %>" width="375px" height="250px" alt="item.photograph.title">
                    <div class="card-img-overlay">
                      <h4 class"card-title"> <%= item.photograph.title %> </h4>
                      <p> <%= item.quantity %> <%= item.size %> <%= "print".pluralize(item.quantity) %> in cart </p>
                      <p> <%= number_to_currency (item.price * item.quantity) %> </p>
                    </div>
                  </div>
                </div>
              </div>

                <% end %>
